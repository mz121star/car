@using car.DTO;
@using System.Web.Mvc.Html;

@if (Model.ViewType == null)
{<div class="row">

        <div class="jumbotron">
            <h1>欢迎光临4s店!</h1>
            <p>
                优势一：会战沈城，低价购车，免费报名享优惠价格！<br />
                优势二：签到有礼，购车有机会抽取万元大奖！<br />
                优势三：保证沈城当期购车最低价格，正规4S店全国联保！<br />
                优势四：团购现场看车，讲解（车型+车险）无强制性消费！<br />
                优势五：车源丰富，团购享受优先提车
            </p>
            <p><a class="btn btn-success btn-lg" role="button" href='@Url.Action("Car")'>選擇車牌</a></p>
        </div>

    </div>
}
else if (Model.ViewType == 1)
{
    <div class="col-md-2 col-md-offset-10">
        <div class="btn-group">
            @Html.ActionLink("模式1", "Index", new { viewType = 1 }, new { @class = "  win1" })
            @Html.ActionLink("模式2", "Index", new { viewType = 2 }, new { @class = "   win2" })
        </div>
    </div>
    <div class="row">
        @foreach (Goods item in Model.Goods)
        {
            <div class="col-sm-6 col-md-3">
                <a href="#" class="thumbnail" data-toggle="modal" data-target="#myModal">
                    <img data-src="holder.js/300x200" alt="300x200" src="data:image/png;base64,"
                         style="width: 300px; height: 200px;">
                </a>
                <div class="caption">
                    <h3>@item.GOODSNAME</h3>
                    <p>
                        价格:@item.SALEPRICE
                    </p>
                    <p>
                        @if (Session["Plate"] == null)
                        {
                            <a href="#" class="btn btn-primary" onclick="if(confirm('尚未选择车辆，是否跳转至选择车辆页？')) location.href='@Url.Action("Car")'; else return false;">购买</a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-primary" onclick="return confirm('确定要为<@(Session["plate"])>购买吗？')">购买</a>
                        }
                    </p>
                </div>
            </div>
        }

    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">大图预览</h4>
                </div>
                <div class="modal-body">
                    <img src='@Url.Content("~/images/product/1.jpg")' />
                    <p>嘉实多防冻</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
}
else
{
    <div class="col-md-2 col-md-offset-10">
        <div class="btn-group">
            @Html.ActionLink("模式1", "Index", new { viewType = 1 }, new { @class = "  win1" })
            @Html.ActionLink("模式2", "Index", new { viewType = 2 }, new { @class = "   win2" })
        </div>
    </div>
    <div class="row">

        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>序号</th>
                    <th>商品/服务</th>
                    <th>单价</th>
                    <th>图片</th>
                    <th>备注</th>
                    <th>购买</th>
                </tr>
            </thead>
            <tbody>



                @foreach (Goods item in Model.Goods)
                {
                    <tr>
                        <td>1</td>
                        <td>@item.GOODSNAME</td>
                        <td>@item.SALEPRICE</td>
                        <td>
                            <img data-src="holder.js/300x200" alt="300x200" src="data:image/png;base64,"
                                 style="width: 30px; height: 20px;">
                        </td>
                        <td>暂无</td>
                        <td>
                            <button class="btn btn-success ">
                                @if (Session["Plate"] == null)
                                {
                                    <a href="#" onclick="if(confirm('尚未选择车辆，是否跳转至选择车辆页？')) location.href='@Url.Action(" car")'; else return false;">购买</a>
                                }
                                else
                                {
                                    <a href="#" onclick="return confirm('确定要为<@(Session[" plate"])>购买吗？')">购买</a>
                                }
                            </button>
                        </td>
                    </tr>



                }
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">大图预览</h4>
                </div>
                <div class="modal-body">
                    <img src='@Url.Content("~/images/product/1.jpg")' />
                    <p>嘉实多防冻</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->


}
